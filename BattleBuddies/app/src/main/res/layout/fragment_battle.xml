        app:layout_constraintStart_toEndOf="@+id/BB_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="15dp"
        android:fontFamily="sans-serif-condensed"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/attack_1"
        app:layout_constraintTop_toBottomOf="@+id/BB_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/attack_2"
        android:src="@drawable/ic_arrow_downward_black_24dp"
        android:tint="#ff6961"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dmg_1_title"
        app:layout_constraintTop_toTopOf="@+id/attack_1"
