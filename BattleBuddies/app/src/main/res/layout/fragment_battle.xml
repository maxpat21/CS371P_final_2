    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/owner_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#ff6961"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BB_name_1"
        app:layout_constraintTop_toBottomOf="@+id/owner_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="18dp"
        android:background="#ff6961"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/BB_1"
        app:layout_constraintTop_toBottomOf="@+id/BB_name_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed_1_title"
        app:layout_constraintTop_toTopOf="@+id/BB_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/BB_1"
        android:gravity="center"
        android:text="Speed: "
        android:textSize="18dp"
        android:background="#ff6961"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed_1"
        app:layout_constraintTop_toTopOf="@+id/BB_1"
