<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BB_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="25dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="15dp"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/leaderboard_but"
        android:src="@drawable/ic_trophy"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/BB_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/battle_but"
        android:src="@drawable/ic_swords"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@+id/BB_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/my_BattleBuddy"
        app:layout_constraintTop_toBottomOf="@+id/BB_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/power_text"
        android:textSize="18dp"
        android:text="Speed: "
        android:fontFamily="sans-serif-condensed"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speed_stat"
        app:layout_constraintStart_toEndOf="@+id/speed_text"
        app:layout_constraintBottom_toTopOf="@+id/power_stat"
        android:textSize="18dp"
        android:fontFamily="sans-serif-condensed"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/power_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Power: "
        android:textSize="18dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/power_stat"
        app:layout_constraintStart_toEndOf="@+id/power_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="18dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="40dp"
        />

    <Button
        android:id="@+id/feed_but"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="sans-serif-condensed"
        android:text="Feed"
        android:textSize="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>